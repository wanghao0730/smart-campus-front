@charset "UTF-8";
/* uni.scss */
/**
 * 自定义全局的公用样式
 */
/* 可以重复使用的代码 */
.errand-order {
  position: relative;
  padding-bottom: 110rpx;
}
.errand-order .form-content {
  background-color: #fff;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
}
.errand-order .choose-type {
  display: flex;
  align-items: center;
  border: 25rpx;
  background-color: #fff;
  border-radius: 25rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 35rpx;
  box-shadow: 1px 0px 8px #A493FF;
}
.errand-order .choose-type .type-box {
  padding-left: 20rpx;
  flex: 1;
}
.errand-order .choose-type .type-box  .u-radio-group--row {
  justify-content: flex-end;
}
.errand-order .choose-address {
  background-color: #fff;
  border-radius: 25rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx;
  font-size: 35rpx;
}
.errand-order .choose-address .add-address {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.errand-order .choose-address .add-address > image {
  width: 130rpx;
  height: 130rpx;
  margin-bottom: 10rpx;
}
.errand-order .choose-address .user-address {
  background-color: #fff;
  border-radius: 25rpx;
  padding: 20rpx 0;
  font-size: 35rpx;
}
.errand-order .choose-address .user-address .address-detail {
  font-size: 40rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.errand-order .choose-address .user-address .concat-info {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  font-size: 30rpx;
  color: #b5b5b5;
}
.errand-order .choose-address .user-address .concat-info view:nth-child(2) {
  margin-left: 20rpx;
}
.errand-order .choose-address .user-address .door-number {
  font-size: 30rpx;
  color: #b5b5b5;
}
.errand-order .choose-address .user-address .send-time {
  font-weight: 500;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.errand-order .choose-address .user-address .send-time .send-info {
  display: flex;
  justify-content: center;
  align-items: center;
}
.errand-order .choose-address .user-address .send-time .send-info .not-select {
  color: #A493FF;
}
.errand-order .footer-submit {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  z-index: 11;
  padding: 20rpx;
}
.errand-order .footer-submit .submit {
  width: 60%;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 700;
  letter-spacing: 5rpx;
  margin: 0 auto;
  color: #fff;
  border-radius: 30rpx;
  text-align: center;
  background-color: #A493FF;
}

