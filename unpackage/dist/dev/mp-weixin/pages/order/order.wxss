@charset "UTF-8";
/* uni.scss */
/**
 * 自定义全局的公用样式
 */
/* 可以重复使用的代码 */
.content {
  width: 100%;
  padding: 30rpx;
}
.content .content-item {
  background-color: #fff;
  padding: 20rpx 0 0 0;
  border-radius: 15rpx;
  margin-bottom: 35rpx;
  box-shadow: 1px 0px 8px #A493FF;
}
.content .content-item .header-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 25rpx;
  border-bottom: 2rpx solid #d6d7d9;
}
.content .content-item .header-info .user {
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .content-item .header-info .user .name {
  padding-left: 15rpx;
  font-size: 35rpx;
  font-weight: bolder;
  letter-spacing: 2rpx;
}
.content .content-item .header-info .order-type {
  padding: 10rpx 20rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  color: #fff;
  background-color: #A493FF;
}
.content .content-item .content-detail {
  padding: 10rpx 25rpx;
}
.content .content-item .content-detail .common {
  margin: 30rpx 0;
  display: flex;
  align-items: center;
}
.content .content-item .content-detail .common .desc {
  color: #999;
  padding-left: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.content .content-item .footer {
  padding: 25rpx 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 1px -2px 8px #b5b5b5;
}
.content .content-item .footer .price {
  color: darkred;
  font-size: 38rpx;
  font-weight: bold;
}
.content .content-item .footer .jump-order {
  padding: 10rpx 20rpx;
  border-radius: 18rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  color: #fff;
  background-color: #0dc9d5;
}

